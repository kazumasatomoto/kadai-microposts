<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
    <%= render 'relationships/follow_button', user: @user %>
  </aside>
  <div class="col-sm-8">
    <%= render 'menu', user: @user, count_microposts: @count_microposts, count_followings: @count_followings, count_followers: @count_followers, count_likes: @count_likes %>
    <%= render 'users', users: @followings %>
  </div>
</div>