<% if current_user.registrated_favorite?(micropost) %>
    <%= form_with(model:current_user.favorites.find_by(micropost_id: micropost.id), html: {method: :delete}) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Delete Favorites', class: 'btn btn-danger btn-block' %>
    <% end %>
<% else %>
    <%= form_with(model:current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Add to Favorites', class: 'btn btn-primary btn-block' %>
    <% end %>
<% end %>